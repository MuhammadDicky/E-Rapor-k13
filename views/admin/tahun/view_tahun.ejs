<%- include ../../partials/admin_layout/header.ejs %>
<%- include ../../partials/admin_layout/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

  <!-- Main content -->
  <section class="content">
    <div class="row">

      <div class="col-xs-12">
        <div class="box">
          <!-- /.box-header -->
          <div class="box-header">
            <h3 class="box-title">Data Tahun</h3>
          </div>

          <div class="box-body">
            <div style="margin: 0 20px 20px 20px;">
              <!-- <button class="btn btn-success">Tambah</button> -->
              <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-default">
                Tambah
              </button>
            </div>
            <table id="tahun" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Tahun</th>
                  <th>Kepala Sekolah</th>
                  <th>Tgl Raport</th>
                  <th>Semester</th>
                  <th>Status</th>
                  <th>Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < tahun.length; i++ ) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= tahun[i].tahun %></td>
                  <td>
                    <%= tahun[i].kepala_sekolah %>
                  </td>
                  <td>
                    <%= tahun[i].tgl_raport %>
                  </td>
                  <td>
                    <%= tahun[i].semester %>
                  </td>
                  <td>
                    <span class="pull-right-container">
                      <% if(tahun[i].status === "Active") { %>
                      <small class="label pull-center bg-green"> <%= tahun[i].status %></small>
                      <% } else { %>
                      <small class="label pull-center bg-red"> <%= tahun[i].status %></small>
                      <% }  %>
                    </span>
                  </td>

                  <td>
                    <a href="javascript:void(0);" type="button" class="btn btn-success btn-sm edit">
                      <span class="glyphicon glyphicon-pencil"></span>
                      Edit
                    </a>
                    <button class="btn btn-info btn-sm" onclick="update_status(`<%= tahun[i].id %>`)"
                      data-id="<%= tahun[i].id %>">
                      <span class="glyphicon glyphicon-star"></span>
                      Active
                    </button>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/admin_layout/footer.ejs %>
<!-- page script -->
<script>
  $(document).ready(function () {
    // datatable
    $('#tahun').DataTable()
  })
</script>